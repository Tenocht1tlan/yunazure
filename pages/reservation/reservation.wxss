  position: absolute;
  background-color:rgb(200, 198, 231);
  width: 700rpx;
  height: 200rpx;
  bottom: -100px;
  left: 25rpx;
  font-size: large;
  font-family: simson;
  color: #FFFFFF;
  text-align: center;
}
.CoverIcon{
  display: flex;
  margin-top: 3rpx;
  margin-left: 650rpx;
  width: 20px;
  height: 20px;
}
.storeCoverText{
  display: flex;
  justify-content: center;
  align-items: center;
}
.hoverResr{
  opacity: 0.9;
  background-color: rgb(165, 27, 27);
}
