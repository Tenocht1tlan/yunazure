  font-size: 25rpx;  
  padding-top: 40rpx;
  height: 80rpx; 
  justify-content: center;
}
.x-backGard{
  display: flex;
  margin-top: 50rpx;
  align-items: center;
  justify-content: center;
}
.backGard{
  width: 650rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
